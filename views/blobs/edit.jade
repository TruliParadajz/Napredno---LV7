extends ../layout

block content
	h1.
		Projekt ID #{blob._id}
	form(action='/blobs/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
		p Naziv:
			input#inputNaziv(type='text', value='#{blob.naziv}', name='naziv')
		p Opis::
			input#inputOpis(type='text', value='#{blob.opis}', name='opis')
		p Cijena:
			input#inputCijena(type='number', value='#{blob.cijena}', name='cijena')


		p Clanovi trenutni:
			input#inputClanovi(type='text', value='#{blob.clanovi}', name='clanovi', disabled=true)

		p Clanovi:
			select(multiple, name="clanovi")
				each item in users
					option(value='#{item.email}')=item.email

		p Datum pocetka:
			input#inputDatumPocetka(type='date', name='datumPocetka', value='#{blob.datumPocetka}')
		P Datum zavrsetka:
			input#inputDatumZavrsetka(type='date', name='datumZavrsetka', value='#{blob.datumZavrsetka}')
		P Obavljeni Poslovi:
			input#inputObavljeniPoslovi(type='checkbox', name='obavljeniPoslovi', checked=('#{blob.obavljeniPoslovi}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update